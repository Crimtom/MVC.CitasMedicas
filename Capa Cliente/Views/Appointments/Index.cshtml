@model List<DTO.Appointment.AppointmentDto>

@{
    ViewData["Title"] = "Citas Médicas";
}

<h1>Citas Médicas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nueva Cita</a>
</p>

@if (Model.Count == 0)
{
    <div class="alert alert-info">No hay citas registradas.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Paciente</th>
                <th>Doctor</th>
                <th>Fecha y Hora</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.PatientName</td>
                    <td>@item.DoctorName</td>
                    <td>@item.AppointmentDateTime.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @if (item.Status == "Programada")
                        {
                            <span class="badge bg-primary">@item.Status</span>
                        }
                        else if (item.Status == "Cancelada")
                        {
                            <span class="badge bg-danger">@item.Status</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@item.Status</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Cancelar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
