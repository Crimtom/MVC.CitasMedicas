@model DTO.Appointment.AppointmentDto

@{
    ViewData["Title"] = "Cancelar Cita";
}

<h1>Cancelar Cita</h1>

<div class="alert alert-warning">
    <h4>¿Está seguro que desea cancelar esta cita?</h4>
</div>

<div class="card" style="max-width: 500px;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Paciente:</dt>
            <dd class="col-sm-8">@Model.PatientName</dd>
            
            <dt class="col-sm-4">Doctor:</dt>
            <dd class="col-sm-8">@Model.DoctorName</dd>
            
            <dt class="col-sm-4">Fecha y Hora:</dt>
            <dd class="col-sm-8">@Model.AppointmentDateTime.ToString("dd/MM/yyyy HH:mm")</dd>
            
            <dt class="col-sm-4">Notas:</dt>
            <dd class="col-sm-8">@(Model.Notes ?? "Sin notas")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-3">
    <button type="submit" class="btn btn-danger">Sí, Cancelar Cita</button>
    <a asp-action="Index" class="btn btn-secondary">No, Volver</a>
</form>
