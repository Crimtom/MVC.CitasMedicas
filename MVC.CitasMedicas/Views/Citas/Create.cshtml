<div class="card shadow p-4">
    <h3>Crear Cita</h3>

    <form id="formCita">

        <div class="mb-3">
            <label>Paciente</label>
            <select id="paciente" class="form-control"></select>
        </div>

        <div class="mb-3">
            <label>Doctor</label>
            <select id="doctor" class="form-control"></select>
        </div>

